{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "team": {
            "type": "string"
        },
        "environment": {
            "type": "string",
            "defaultValue": "tst"
        },
        "apiPublisherEmail": {
            "type": "string"
        },
        "apiPublisherName": {
            "type": "string"
        },
        "templatesBaseUrl": {
            "type": "string",
            "metadata": {
                "description": "Linked Templates base url"
            },
            "defaultValue": "https://raw.githubusercontent.com/t-haunzwickl/azure-deploy-test/master/nestedtemplates"
        }
    },
    "variables": {
        "location": "[resourceGroup().location]",
        "prefix": "[concat(parameters('team'), '-', parameters('environment'), '-')]",
        "artifacts": {
            "provisioningWebAppsUrl": "[concat(parameters('templatesBaseUrl'), '/provisioningWebApps.json')]",
            "provisioningCosmosDBUrl": "[concat(parameters('templatesBaseUrl'), '/provisioningCosmosDB.json')]",
            "provisioningCDNProfileUrl": "[concat(parameters('templatesBaseUrl'), '/provisioningCDNProfile.json')]",
            "provisioningEventGridTopic": "[concat(parameters('templatesBaseUrl'), '/provisioningEventGridTopic.json')]",
            "provisioningAPIManagementServiceUrl": "[concat(parameters('templatesBaseUrl'), '/provisioningAPIManagementService.json')]",

            "configureCDNEndpoints": "[concat(parameters('templatesBaseUrl'), '/configureCDNEndpoint.json')]"
        },
        "siteName": [
            "[concat(variables('prefix'), 'main')]",
            "[concat(variables('prefix'), 'usr')]",
            "[concat(variables('prefix'), 'usr-adm')]",
            "[concat(variables('prefix'), 'ten')]"
        ]
    },
    "resources": [
        {
            "name": "ProvisioningWebApps",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2015-01-01",
            "comments": "This resource will create an App Service as well as WebApps",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('artifacts').provisioningWebAppsUrl]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "location": {
                        "value": "[variables('location')]"
                    },
                    "prefix": {
                        "value": "[variables('prefix')]"
                    },
                    "siteName": {
                        "value": "[variables('siteName')]"
                    }
                }
            }
        },
        {
            "name": "ProvisioningCosmosDB",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2015-01-01",
            "comments": "This resource will create a CosmosDB",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('artifacts').provisioningCosmosDBUrl]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "location": {
                        "value": "[variables('location')]"
                    },
                    "prefix": {
                        "value": "[variables('prefix')]"
                    }
                }
            }
        },
        {
            "name": "ProvisioningCDNProfile",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2015-01-01",
            "comments": "This resource will create a CDN Profile",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('artifacts').provisioningCDNProfileUrl]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "location": {
                        "value": "[variables('location')]"
                    },
                    "prefix": {
                        "value": "[variables('prefix')]"
                    }
                }
            }
        },
        {
            "name": "ConfigureCDNEndpoints",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2015-01-01",
            "comments": "This resource will add CDN Endpoints",
            "dependsOn": [
                "ProvisioningCDNProfile"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('artifacts').configureCDNEndpoints]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "location": {
                        "value": "[variables('location')]"
                    },
                    "prefix": {
                        "value": "[variables('prefix')]"
                    },
                    "siteName": {
                        "value": "[variables('siteName')]"
                    }
                }
            }
        },
        {
            "name": "ProvisioningEventGridTopic",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2015-01-01",
            "comments": "This resource will deploy Event Grid Topic",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('artifacts').provisioningEventGridTopic]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "location": {
                        "value": "[variables('location')]"
                    },
                    "prefix": {
                        "value": "[variables('prefix')]"
                    }
                }
            }
        },
        {
            "name": "ProvisioningAPIManagementService",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2015-01-01",
            "comments": "This resource will deploy API Management Service",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('artifacts').provisioningAPIManagementServiceUrl]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "location": {
                        "value": "[variables('location')]"
                    },
                    "prefix": {
                        "value": "[variables('prefix')]"
                    },
                    "publisherEmail": {
                        "value": "[parameters('apiPublisherEmail')]"
                    },
                    "publisherName": {
                        "value": "[parameters('apiPublisherName')]"
                    }
                }
            }
        }
    ]
}
