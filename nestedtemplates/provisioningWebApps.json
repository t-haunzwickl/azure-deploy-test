{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "prefix": {
            "type": "string"
        },
        "location": {
            "type": "string"
        }
    },
    "variables": {
        "hostingPlanName": "[concat(parameters('prefix'), 'asp')]",
        "appServices": {
            "main": "[concat(parameters('prefix'), 'main-wap')]",
            "usr": "[concat(parameters('prefix'), 'usr-wap')]",
            "usr_adm": "[concat(parameters('prefix'), 'usr-adm-wap')]",
            "ten": "[concat(parameters('prefix'), 'ten-wap')]"
        },
        "appServiceSKU": {
            "name": "S1",
            "tier": "Standard"
        }
    },
    "resources": [
        {
            "apiVersion": "2015-08-01",
            "name": "[variables('hostingPlanName')]",
            "type": "Microsoft.Web/serverfarms",
            "location": "[parameters('location')]",
            "properties": {
                "name": "[variables('hostingPlanName')]"
            },
            "sku": {
                "name": "[variables('appServiceSKU').name]",
                "tier": "[variables('appServiceSKU').tier]"
            }
        },
        {
            "apiVersion": "2015-08-01",
            "location": "[parameters('location')]",
            "name": "[variables('appServices').main]",
            "type": "Microsoft.Web/sites",
            "dependsOn": [
                "[concat('Microsoft.Web/serverFarms/', variables('hostingPlanName'))]"
            ],
            "properties": {
                "name": "[variables('appServices').main]",
                "serverFarmId": "[variables('hostingPlanName')]"
            }
        },
        {
            "apiVersion": "2015-08-01",
            "location": "[parameters('location')]",
            "name": "[variables('appServices').usr]",
            "type": "Microsoft.Web/sites",
            "dependsOn": [
                "[concat('Microsoft.Web/serverFarms/', variables('hostingPlanName'))]"
            ],
            "properties": {
                "name": "[variables('appServices').usr]",
                "serverFarmId": "[variables('hostingPlanName')]"
            }
        },
        {
            "apiVersion": "2015-08-01",
            "location": "[parameters('location')]",
            "name": "[variables('appServices').usr_adm]",
            "type": "Microsoft.Web/sites",
            "dependsOn": [
                "[concat('Microsoft.Web/serverFarms/', variables('hostingPlanName'))]"
            ],
            "properties": {
                "name": "[variables('appServices').usr_adm]",
                "serverFarmId": "[variables('hostingPlanName')]"
            }
        },
        {
            "apiVersion": "2015-08-01",
            "location": "[parameters('location')]",
            "name": "[variables('appServices').ten]",
            "type": "Microsoft.Web/sites",
            "dependsOn": [
                "[concat('Microsoft.Web/serverFarms/', variables('hostingPlanName'))]"
            ],
            "properties": {
                "name": "[variables('appServices').ten]",
                "serverFarmId": "[variables('hostingPlanName')]"
            }
        }
    ]
}
